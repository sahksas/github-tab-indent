{
  "manifest_version": 3,

  "name": "Github Tab Indent",
  "description": "",
  "version": "0.0.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_title": "Github Tab Indent"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage"],

  "host_permissions": ["<all_urls>"],

  "options_page": "options.html"
}
